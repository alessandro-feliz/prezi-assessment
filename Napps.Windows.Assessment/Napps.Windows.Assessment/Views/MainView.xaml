<Window x:Class="Napps.Windows.Assessment.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Napps.Windows.Assessment.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Napps.Windows.Assessment.Properties"
        xmlns:controls="clr-namespace:Napps.Windows.Assessment.Controls"
        Title="{x:Static res:Resources.ApplicationTitle}"
        Icon="/Assets/Icons/prezi.ico"
        MinWidth="800"
        MinHeight="600"
        mc:Ignorable="d">
    <Grid>
        <!-- Main UI -->
        <DockPanel>
            
            <!-- Status bar -->
            <controls:StatusControl DataContext="{Binding Status}" DockPanel.Dock="Bottom" />
            
            <!-- View -->
            <ContentControl cal:View.Model="{Binding ActiveItem}" />
            
        </DockPanel>

        <!-- Busy overlay -->
        <Grid Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Width="64" Height="64"
                       Source="/Assets/Images/spinner.gif"
                       Stretch="UniformToFill" />
                <TextBlock Text="{x:Static res:Resources.Loading}"
                           Foreground="White" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        
    </Grid>
</Window>