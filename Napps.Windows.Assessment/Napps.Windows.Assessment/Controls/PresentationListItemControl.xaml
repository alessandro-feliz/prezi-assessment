<UserControl x:Class="Napps.Windows.Assessment.Controls.PresentationListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="250">

    <ContentControl Style="{StaticResource PresentationItemHoverableStyle}" Margin="20"
                    cal:Message.Attach="[Event MouseLeftButtonUp] = [Action ShowPresentationDetailsAsync()]">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Thumbnail -->
            <Image Source="{Binding ThumbnailFile, Converter={StaticResource ImageSourceToBitmapConverter}}" Stretch="UniformToFill" Grid.Row="0"/>

            <!-- Title and Author -->
            <StackPanel Grid.Row="1" Margin="5">
                <TextBlock Text="{Binding Title}" Style="{StaticResource ListItemTitle}" />
                <TextBlock Text="{Binding Author.Name.FullName}" Style="{StaticResource ListItemAuthor}" />
            </StackPanel>
        </Grid>
    </ContentControl>
</UserControl>